@model IEnumerable<Shop.ERP.Models.PRODUCTS>
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/shared/_layout.cshtml";
}

<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
        <div class="card-tools">
            <a class="btn btn-xs btn-primary" asp-action="Create"><i class="fa fa-plus"></i> Create new</a>
        </div>
    </div>
    <div class="card-body table-responsive">
        <table class="table table-sm table-bordered">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Name</th>
                    <th>Rate</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody>
                @foreach (PRODUCTS item in Model)
                {
                    <tr>
                        <td>@item.CATEGORY_NAME</td>
                        <td>@item.PRODUCT_NAME</td>
                        <td>@item.PRODUCT_RATE</td>
                        <td><a class="btn btn-xs btn-primary" asp-action="Edit" asp-route-id="@item.ID"><i class="fa fa-edit"></i>  Edit</a>
                            <a class="btn btn-xs btn-danger" asp-action="Delete" asp-route-id="@item.ID" onclick="return confirm('Are you sure?')"><i class="fa fa-trash"></i>  Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>