@model Shop.ERP.Models.PRODUCTS
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/shared/_layout.cshtml";
}

<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title">Add/Edit @ViewData["Title"]</h3>
        <div class="card-tools">
            <a class="btn btn-primary btn-xs" asp-action="Create"><i class="fa fa-plus"></i> Create New</a>
        </div>
    </div>
    <form asp-action="Create" method="post">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ID" type="hidden" />
            <div class="row">
                <div class="col-md-3">
                    <label asp-for="CATEGORY_ID" class="control-label"></label>
                    <select asp-for="CATEGORY_ID" asp-items="@ViewBag.CATEGORY_ID" class="form-control form-control-sm">
                    </select>
                    <span asp-validation-for="CATEGORY_ID" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="PRODUCT_NAME" class="control-label"></label>
                    <input asp-for="PRODUCT_NAME" class="form-control form-control-sm" title="Enter Product Name" placeholder="Enter Product Name" />
                    <span asp-validation-for="PRODUCT_NAME" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="PRODUCT_RATE" class="control-label"></label>
                    <input asp-for="PRODUCT_RATE" class="form-control form-control-sm" title="Enter Product Rate" placeholder="Enter Product Rate" />
                    <span asp-validation-for="PRODUCT_RATE" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-xs btn-primary" type="submit"><i class="fa fa-chevron-left"></i> Back</a>
            <button class="btn btn-xs btn-info" type="reset"><i class="fa fa-undo"></i> Reset</button>
            <button class="btn btn-xs btn-success" type="submit"><i class="fa fa-save"></i> Submit</button>
        </div>
    </form>
</div>