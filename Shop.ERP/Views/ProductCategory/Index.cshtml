@model IEnumerable<Shop.ERP.Models.PRODUCT_CATEGORY>
@{
    ViewData["Title"] = "Product Category";
    Layout = "~/Views/shared/_layout.cshtml";
}

<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title">Category List</h3>
        <div class="card-tools">
            <a class="btn btn-xs btn-primary" asp-action="Create"><i class="fa fa-plus"></i> Create new</a>
        </div>
    </div>
    <div class="card-body table-responsive">
        <table class="table table-sm table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Category Name</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody>
                @foreach (PRODUCT_CATEGORY item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.CATEGORY_NAME</td>
                        <td><a class="btn btn-xs btn-primary" asp-action="Edit" asp-route-id="@item.ID"><i class="fa fa-edit"></i>  Edit</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>